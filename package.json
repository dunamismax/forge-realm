{
  "name": "forge-realm",
  "version": "5.0",
  "description": "Hugo website for Forge Realm - Open Source Trading Card Game",
  "main": "index.js",
  "homepage": "https://github.com/dunamismax/forge-realm#readme",
  "scripts": {
    "dev": "hugo server --buildDrafts --buildFuture --bind 0.0.0.0 --navigateToChanged",
    "dev:fast": "hugo server --buildDrafts --buildFuture --bind 0.0.0.0 --navigateToChanged --disableFastRender=false",
    "build": "hugo mod tidy && hugo --minify --environment production",
    "build:preview": "hugo mod tidy && hugo --buildDrafts --buildFuture --environment staging",
    "clean": "rm -rf public resources tmp",
    "serve": "npm run build && hugo server --environment production --disableFastRender",
    "cf-pages": "hugo mod tidy && hugo --minify --environment production",
    "validate": "hugo config && hugo --renderStaticToDisk=false --quiet",
    "format": "npx prettier --write \"**/*.{md,json,yaml,yml}\" --ignore-path .gitignore",
    "lint": "npx markdownlint \"content/**/*.md\"",
    "precommit": "npm run format && npm run lint && npm run validate && npm run build",
    "test": "npm run validate && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dunamismax/forge-realm.git"
  },
  "keywords": [],
  "author": "dunamismax@forge-realm.com",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dunamismax/forge-realm/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.0.0"
  }
}
