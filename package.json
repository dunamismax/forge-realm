{
  "name": "forge-realm",
  "version": "0.0.1",
  "description": "Open-source trading card game built by the community, for the community",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:engine && npm run build:tools && npm run build:web",
    "build:engine": "node scripts/build-engine.js",
    "build:tools": "node scripts/build-tools.js",
    "build:web": "node scripts/build-web.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ scripts/ tests/",
    "lint:fix": "eslint src/ scripts/ tests/ --fix",
    "format": "prettier --write src/ scripts/ tests/ docs/",
    "format:check": "prettier --check src/ scripts/ tests/ docs/",
    "validate": "npm run validate:cards && npm run validate:rules",
    "validate:cards": "node scripts/validate-cards.js",
    "validate:rules": "node scripts/validate-rules.js",
    "generate": "npm run generate:cards && npm run generate:docs",
    "generate:cards": "node scripts/generate-cards.js",
    "generate:docs": "node scripts/generate-docs.js",
    "generate-prints": "node scripts/generate-print-sheets.js",
    "generate-prints-a4": "node scripts/generate-print-sheets.js --format=a4",
    "generate-digital": "node scripts/generate-digital-exports.js",
    "dev": "npm run dev:engine && npm run dev:web",
    "dev:engine": "node --watch src/engine/index.js",
    "dev:web": "node scripts/dev-server.js",
    "clean": "rimraf dist/ coverage/ .tmp/",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prepush": "npm run test && npm run validate",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run",
    "start": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sawyer/forge-realm.git"
  },
  "keywords": [
    "trading-card-game",
    "tcg",
    "open-source",
    "community-driven",
    "print-and-play",
    "card-game",
    "game-engine",
    "collaborative",
    "mtg-alternative",
    "free-to-play"
  ],
  "author": "Forge Realm Community",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sawyer/forge-realm/issues"
  },
  "homepage": "https://github.com/sawyer/forge-realm#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "canvas": "^2.11.2",
    "pdfkit": "^0.14.0",
    "sharp": "^0.32.6",
    "ajv": "^8.12.0",
    "yaml": "^2.3.4",
    "marked": "^9.1.6",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "standard-version": "^9.5.0",
    "rimraf": "^5.0.5",
    "@jest/globals": "^29.7.0",
    "supertest": "^6.3.3",
    "canvas-prebuilt": "^2.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/web/public/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Code Style"
      },
      {
        "type": "refactor",
        "section": "Code Refactoring"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "test",
        "section": "Tests"
      },
      {
        "type": "chore",
        "hidden": true
      }
    ]
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/sawyer"
    },
    {
      "type": "patreon",
      "url": "https://patreon.com/forgerealm"
    }
  ],
  "contributors": [
    "Community Contributors <https://github.com/sawyer/forge-realm/graphs/contributors>"
  ],
  "files": [
    "dist/",
    "assets/templates/",
    "data/",
    "LICENSE",
    "LICENSE-CONTENT",
    "README.md",
    "CHANGELOG.md"
  ]
}