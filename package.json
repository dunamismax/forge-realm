{
  "name": "ideal-magic",
  "version": "8.4",
  "description": "Hugo website for Ideal Magic - Open Source Trading Card Game",
  "main": "index.js",
  "homepage": "https://github.com/dunamismax/ideal-magic#readme",
  "scripts": {
    "dev": "hugo server --buildDrafts --buildFuture --bind 0.0.0.0 --navigateToChanged",
    "dev:fast": "hugo server --buildDrafts --buildFuture --bind 0.0.0.0 --navigateToChanged --disableFastRender=false",
    "build": "hugo --minify --environment production",
    "build:preview": "hugo --buildDrafts --buildFuture --environment preview",
    "clean": "rm -rf public resources tmp",
    "validate": "hugo config && hugo --quiet --panicOnWarning",
    "lint": "npx markdownlint --fix \"content/**/*.md\"",
    "test": "npm run validate && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dunamismax/ideal-magic.git"
  },
  "keywords": [],
  "author": "dunamismax@ideal-magic.com",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dunamismax/ideal-magic/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
